{{ if eq .chezmoi.os "linux" -}}
{{   if eq .chezmoi.osRelease.id "fedora" -}}
#!/bin/bash

for rpm-ostree in {{ range .packages.rpm-ostree -}} {{ . | quote }} {{ end -}}; do
    rpm-ostree install --assumeyes "$rpm-ostree"
done

for brew in {{ range .packages.homebrew -}} {{ . | quote }} {{ end -}}; do
    brew install "$brew"
done

for flatpak in {{ range .packages.flatpak -}} {{ . | quote }} {{ end -}}; do
    flatpak install --system -y "$flatpak"
done
