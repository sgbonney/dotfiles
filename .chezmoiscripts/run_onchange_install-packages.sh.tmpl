{{- else if eq .chezmoi.os "android" -}}
#!/bin/sh

pkg update -y && pkg upgrade -y

for package in {{ range .packages.termux -}} {{ . | quote }} {{ end -}}; do
    pkg install -y "$package"
done

{{- end }}
