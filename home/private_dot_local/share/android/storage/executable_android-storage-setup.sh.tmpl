{{- template "bash-shebang" . -}}

{{- if contains "android" .osid -}}
# Define source and destination directories
SOURCE_DIR="$HOME/.local/share/android"
DEST_DIR="/storage/emulated/0"

# Check if source directory exists
if [ ! -d "$SOURCE_DIR" ]; then
  echo "Source directory $SOURCE_DIR does not exist."
  exit 1
fi

# Check if destination directory exists
if [ ! -d "$DEST_DIR" ]; then
  echo "Destination directory $DEST_DIR does not exist."
  exit 1
fi

# Copy files from source to destination, replacing existing files
cp -r "$SOURCE_DIR/"* "$DEST_DIR/"

# Check if the copy was successful
if [ $? -eq 0 ]; then
  echo "Files copied successfully from $SOURCE_DIR to $DEST_DIR."
else
  echo "An error occurred while copying files."
  exit 1
fi

{{- end -}}